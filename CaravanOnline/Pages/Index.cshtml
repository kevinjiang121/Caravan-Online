@page
@model IndexModel
@{
    ViewData["Title"] = "Card Game";
}

<h2>@Model.Message</h2>
<div>
    <form method="post">
        @if (HttpContext.Session.GetString("CurrentPlayer") == "Player 1" && Model.Player1Cards != null)
        {
            <p>Player 1: Select a card</p>
            foreach (var card in Model.Player1Cards)
            {
                <button type="submit" name="selectedCard" value="@card">@card</button>
            }
        }
        else if (HttpContext.Session.GetString("CurrentPlayer") == "Player 2" && Model.Player2Cards != null)
        {
            <p>Player 2: Select a card</p>
            foreach (var card in Model.Player2Cards)
            {
                <button type="submit" name="selectedCard" value="@card">@card</button>
            }
        }
    </form>
</div>
<div>
    <h3>Lane Displays</h3>
    <div style="display: flex; justify-content: space-around;">
        @for (int lane = 1; lane <= 3; lane++)
        {
            <div>
                <h4>Lane @lane</h4>
                @foreach (var card in Model.Lanes[lane])
                {
                    <p>@card</p>
                }
            </div>
        }
    </div>
</div>
